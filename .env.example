# ============================================================
# Activity Tracker Backend — Environment Config
# ============================================================

PORT=3000
NODE_ENV=development

# JWT — CHANGE in production!
JWT_SECRET=change-me-to-a-random-64-char-string
JWT_EXPIRES_IN=30d

# PostgreSQL connection string
# Local: postgresql://user:password@localhost:5432/activity_tracker
# Railway/Render: Set DATABASE_URL in dashboard (auto-provided)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/activity_tracker

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
